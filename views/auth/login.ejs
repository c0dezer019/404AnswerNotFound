<div class="container">
  <form class="form" action="/auth/login" method="POST">
    <div class="form-group">
      <label id="email" for="auth-email">Login</label>
      <input class="form-control" aria-describedby="emailHelp" id="auth-email" type="text" name="username"
        placeholder="email or user name" required>
      <small id="emailHelp" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
      <label id="password" for="auth-password">Password</label>
      <input type="password" class="form-control" id="auth-password" name="password" required>
    </div>
    <button id="loginBtn" type="submit" class="btn btn-dark">Login</button>
    <button id="registerBtn2" type="submit" class="btn btn-dark">Register</button>
  </form>
</div>
